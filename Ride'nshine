<!-- CART POPUP -->
<div id="cartPanel">
  <button id="closeCart">&times;</button>
  <h3 class="text-2xl font-semibold accent">Your Cart & Booking</h3>

  <div class="card mb-6">
    <select id="package">
      <option value="">Select Service</option>
      <option value="exterior">Exterior Wash</option>
      <option value="interior">Interior Wash</option>
      <option value="combo">Interior & Exterior</option>
    </select>
    <select id="plan">
      <option value="">Select Plan</option>
      <option value="one">One Time</option>
      <option value="weekly">Weekly</option>
      <option value="monthly">Monthly</option>
    </select>
    <select id="size">
      <option value="">Vehicle Size</option>
      <option value="compact">Compact / Small</option>
      <option value="mid">Mid-Size / CUV</option>
      <option value="full">Full-Size / SUV / Pickup</option>
      <option value="large">Large Truck / Van / XL SUV</option>
    </select>
    <button id="addCartBtn" class="btn-gold w-full">Add to Cart</button>
    <div class="mt-4 text-xl text-center">Total: <span id="totalInline" class="accent">$0</span></div>
  </div>

  <ul id="cartItemsPopup" class="mb-6 space-y-2"></ul>

  <form id="bookingForm" class="space-y-4">
    <input type="text" id="name" placeholder="Full Name" required>
    <input type="email" id="email" placeholder="Email Address" required>
    <input type="text" id="phone" placeholder="Phone Number" required>
    <button type="submit" class="w-full btn-gold">Submit Booking</button>
  </form>
  <div id="success" class="hidden text-green-400 mt-4 text-center">Booking sent successfully!</div>
</div>

<script>
emailjs.init("YOUR_PUBLIC_KEY");

const prices = {
  exterior: { one:{compact:25,mid:30,full:35,large:40}, weekly:{compact:95,mid:110,full:125,large:140}, monthly:{compact:70,mid:85,full:100,large:120} },
  interior: { one:{compact:50,mid:60,full:70,large:80}, weekly:{compact:180,mid:220,full:260,large:300}, monthly:{compact:140,mid:175,full:200,large:230} },
  combo: { one:{compact:70,mid:80,full:90,large:100}, weekly:{compact:275,mid:315,full:355,large:395}, monthly:{compact:215,mid:235,full:265,large:295} }
};

let cart = [];
let total = 0;

document.getElementById('addCartBtn').addEventListener('click', ()=>{
  const pkg=document.getElementById('package').value;
  const plan=document.getElementById('plan').value;
  const size=document.getElementById('size').value;
  if(!pkg||!plan||!size) return alert("Select all options");
  const price=prices[pkg][plan][size];
  cart.push({pkg,plan,size,price});
  total+=price;
  document.getElementById('totalInline').innerText=`$${total}`;
  const li=document.createElement('li');
  li.textContent=`${pkg} - ${plan} - ${size}: $${price}`;
  li.className="text-gray-300";
  document.getElementById('cartItemsPopup').appendChild(li);
});

document.getElementById('cartTabIcon').addEventListener('click', ()=>document.getElementById('cartPanel').style.transform='translateX(0)');
document.getElementById('closeCart').addEventListener('click', ()=>document.getElementById('cartPanel').style.transform='translateX(100%)');

document.getElementById("bookingForm").addEventListener("submit",function(e){
  e.preventDefault();
  if(cart.length===0) return alert("Add a service to cart first.");
  const templateParams={
    name:document.getElementById('name').value,
    email:document.getElementById('email').value,
    phone:document.getElementById('phone').value,
    services:JSON.stringify(cart),
    total:total
  };
  emailjs.send("YOUR_SERVICE_ID","YOUR_TEMPLATE_ID",templateParams)
    .then(()=>{
      document.getElementById("success").classList.remove("hidden");
      cart=[]; total=0;
      document.getElementById('cartItemsPopup').innerHTML='';
      document.getElementById('totalInline').innerText="$0";
      this.reset();
    })
    .catch(()=>alert("Failed to send booking."));
});

const fadeObserver=new IntersectionObserver(entries=>{entries.forEach(entry=>{if(entry.isIntersecting){entry.target.classList.add('show');}})},{threshold:0.2});
document.querySelectorAll('.fade-up').forEach(el=>fadeObserver.observe(el));
</script>
</body>
